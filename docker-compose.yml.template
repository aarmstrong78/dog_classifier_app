version: '3'

services:

    web:
      build:
        context: ./web/
      ports:
        - "8000:8000"

    api:
      build:
        context: ./api/
      ports:
        - "8001:8001"
      links:
        - web


    nginx:
      restart: always
      build: ./nginx/
      ports:
        - "80:80"
      links:
        - web
        - api
